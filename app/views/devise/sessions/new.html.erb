<% content_for :title, "Вхід" %>

<div class="px-4 py-8">
  <div class="max-w-md mx-auto">
    <div class="text-center mb-8">
      <h1 class="text-2xl font-bold text-gray-900 mb-2">Увійти в аккаунт</h1>
      <p class="text-gray-600">Введіть свої дані для входу</p>
    </div>

    <div class="bg-white rounded-lg border border-gray-200 p-6">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <div>
          <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
                class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition" %>
        </div>

        <div>
          <%= f.label :password, "Пароль", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :password, autocomplete: "current-password",
                class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
            <%= f.label :remember_me, "Запам'ятати мене", class: "ml-2 text-sm text-gray-700" %>
          </div>
        <% end %>

        <div class="pt-4">
          <%= f.submit "Увійти", 
                class: "w-full px-4 py-2.5 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors cursor-pointer" %>
        </div>
      <% end %>

      <div class="mt-8 pt-8 border-t border-gray-200">
        <div class="text-center space-y-3">
          <%= render "devise/shared/links" %>
          <%= link_to "Назад", :back, 
                class: "block text-gray-600 hover:text-gray-900 hover:bg-gray-100 px-4 py-2 rounded-lg transition-colors" %>
        </div>
      </div>
    </div>
  </div>
</div>
