<%- if controller_name != 'sessions' %>
  <%= link_to "Увійти", new_session_path(resource_name), class: "block text-blue-600 hover:text-blue-800 font-medium" %>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Реєстрація", new_registration_path(resource_name), class: "block text-blue-600 hover:text-blue-800 font-medium" %>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Забули пароль?", new_password_path(resource_name), class: "block text-blue-600 hover:text-blue-800 font-medium" %>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Не отримали інструкції підтвердження?", new_confirmation_path(resource_name), class: "block text-blue-600 hover:text-blue-800 font-medium" %>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Не отримали інструкції розблокування?", new_unlock_path(resource_name), class: "block text-blue-600 hover:text-blue-800 font-medium" %>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "Увійти через #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "block w-full text-center px-4 py-2.5 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors mt-2" %>
  <% end %>
<% end %>
