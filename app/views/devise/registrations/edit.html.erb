<% content_for :title, "Редагувати профіль" %>

<div class="px-4 py-8">
  <div class="max-w-md mx-auto">
    <div class="text-center mb-8">
      <h1 class="text-2xl font-bold text-gray-900 mb-2">Редагувати профіль</h1>
      <p class="text-gray-600">Оновіть свої дані</p>
    </div>

    <div class="bg-white rounded-lg border border-gray-200 p-6">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
                class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="text-sm text-yellow-600 bg-yellow-50 p-3 rounded">
            Очікує підтвердження: <%= resource.unconfirmed_email %>
          </div>
        <% end %>

        <div>
          <%= f.label :password, "Новий пароль", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :password, autocomplete: "new-password",
                class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition",
                placeholder: "Залиште порожнім, якщо не хочете змінювати" %>
          <% if @minimum_password_length %>
            <p class="text-xs text-gray-500 mt-1">Мінімум <%= @minimum_password_length %> символів</p>
          <% end %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Підтвердження пароля", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
                class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition" %>
        </div>

        <div>
          <%= f.label :current_password, "Поточний пароль", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :current_password, autocomplete: "current-password", required: true,
                class: "w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition",
                placeholder: "Потрібен для підтвердження змін" %>
        </div>

        <div class="pt-4">
          <%= f.submit "Оновити", 
                class: "w-full px-4 py-2.5 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors cursor-pointer" %>
        </div>
      <% end %>

      <div class="mt-8 pt-8 border-t border-gray-200">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Управління аккаунтом</h3>
        
        <div class="space-y-3">
          <%= button_to "Видалити мій аккаунт", registration_path(resource_name), 
                data: { turbo_confirm: "Ви впевнені? Ця дія незворотня!" }, 
                method: :delete,
                class: "w-full px-4 py-2.5 bg-red-50 text-red-700 border border-red-200 rounded-lg hover:bg-red-100 transition-colors font-medium" %>
          
          <%= link_to "Назад", :back, 
                class: "block text-center px-4 py-2.5 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors" %>
        </div>
      </div>
    </div>
  </div>
</div>
