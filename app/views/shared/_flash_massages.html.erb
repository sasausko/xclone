<% flash.each do |type, message| %>
  <% case type %>
  <% when 'notice' %>
    <div class="bg-green-100 border-green-500 text-green-800 border-t border-b px-4 py-3" role="alert">
      <div class="container mx-auto"><%= message %></div>
    </div>
  <% when 'alert' %>
    <div class="bg-red-100 border-red-500 text-red-800 border-t border-b px-4 py-3" role="alert">
      <div class="container mx-auto"><%= message %></div>
    </div>
  <% else %>
    <div class="bg-blue-100 border-blue-500 text-blue-800 border-t border-b px-4 py-3" role="alert">
      <div class="container mx-auto"><%= message %></div>
    </div>
  <% end %>
<% end %>
